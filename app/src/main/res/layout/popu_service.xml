<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x1014"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:text="服务名称:"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <EditText
                android:id="@+id/ed_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:paddingRight="@dimen/x20"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:text="定价:"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <EditText
                android:id="@+id/ed_price"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:gravity="right|center_vertical"
                android:hint="请输入价格"
                android:inputType="numberDecimal"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="元/"
                android:textColor="@color/text_black"
                android:textSize="@dimen/x42" />

            <EditText
                android:id="@+id/ed_unit"
                android:layout_width="@dimen/x300"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:text=""

                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:text="服务范围:"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <EditText
                android:id="@+id/ed_around"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:layout_toRightOf="@id/tv_1"
                android:background="@null"
                android:maxLines="2"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:text="服务说明:"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <EditText
                android:id="@+id/ed_explain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:maxLines="2"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:inputType="numberDecimal"
                android:text="违约金额(元):"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <EditText
                android:id="@+id/ed_against_ptice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:paddingRight="@dimen/x20"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <RelativeLayout
            android:id="@+id/rl_state"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y141"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:text="上架状态:"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/tv_2"
                android:text=""
                android:textColor="@color/blue"
                android:textSize="@dimen/x39"
                android:gravity="center"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x30"
                android:src="@mipmap/arrow_down_grey"

                />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x33"
                android:text="添加照片:"
                android:textColor="@color/black"
                android:textSize="@dimen/x42" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="@dimen/x92"
                android:layout_height="@dimen/y92"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x30"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@mipmap/icon_add"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/x42" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x30"
            android:background="@color/grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y63"
            android:layout_marginBottom="@dimen/y40"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="@dimen/x454"
                android:layout_height="@dimen/y129"
                android:layout_marginLeft="@dimen/x41"
                android:background="@drawable/btn_hs_cancel"
                android:text="再等等"
                android:textColor="#4cc35d"
                android:textSize="@dimen/x45" />

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="@dimen/x454"
                android:layout_height="@dimen/y129"
                android:layout_marginLeft="@dimen/x35"
                android:background="@drawable/hs_confirm"
                android:text="添加服务"
                android:textColor="@color/white"
                android:textSize="@dimen/x45" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
