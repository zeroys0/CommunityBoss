<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y675"
    android:background="@color/white"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:text="服务名称:"
        android:layout_marginTop="@dimen/y40"
        android:layout_marginLeft="@dimen/x30"
        android:id="@+id/tv_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y40"
        android:layout_toRightOf="@id/tv_name"
        android:text="室内清洁"
        android:layout_marginLeft="@dimen/x30"
        android:textColor="@color/hs_grey"
        android:textSize="@dimen/x39"
        android:id="@+id/tv_service_name"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="定价:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_t"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100元/小时"
        android:textSize="@dimen/x39"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_name"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_service_price"
        android:layout_toRightOf="@id/tv_t"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务范围:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_t"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_s"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="清洁卧室,阳台,厕所"
        android:textSize="@dimen/x39"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_t"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_service"
        android:layout_toRightOf="@id/tv_s"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务说明:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_s"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_p"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="不含油烟机"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="@dimen/x39"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_s"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_explain"
        android:layout_toRightOf="@id/tv_p"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="违约金额:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_p"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_a"
        />

    <TextView
        android:id="@+id/tv_against_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_p"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@id/tv_a"
        android:text="$100"
        android:textColor="@color/hs_grey"
        android:textSize="@dimen/x39" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上架状态:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_a"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_st"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="上架"
        android:textSize="@dimen/x39"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_a"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_status"
        android:layout_toRightOf="@id/tv_st"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加照片:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_st"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_i"
        />
    <ImageView
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_below="@id/tv_st"
        android:id="@+id/img"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@+id/tv_i"
        android:layout_marginLeft="@dimen/x30"
        android:src="@mipmap/img_good"
        android:scaleType="fitXY"
        />



    <RelativeLayout
        android:layout_width="@dimen/x169"
        android:layout_height="@dimen/y70"
        android:textColor="@color/white"
        android:background="@drawable/btn_hs_big"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x36"
        android:layout_marginTop="@dimen/y223"
        android:id="@+id/rl_edit"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            />
        <ImageView
            android:layout_width="@dimen/x33"
            android:layout_height="@dimen/y33"
            android:src="@mipmap/img_edit"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"

            />


    </RelativeLayout>


</RelativeLayout>
