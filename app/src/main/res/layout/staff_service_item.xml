<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y360"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务名称:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_p"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_a"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_p"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@id/tv_a"
        android:text="服务名称"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/hs_grey"
        android:textSize="@dimen/x39" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务范围:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_a"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_st"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="居家 家政"
        android:textSize="@dimen/x39"
        android:maxLines="1"
        android:ellipsize="end"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_a"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_around"
        android:layout_toRightOf="@id/tv_st"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="添加照片:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_st"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_i"
        />
    <ImageView
        android:layout_width="@dimen/x150"
        android:layout_height="@dimen/y150"
        android:layout_below="@id/tv_st"
        android:id="@+id/img"
        android:layout_marginTop="@dimen/y20"
        android:layout_toRightOf="@+id/tv_i"
        android:layout_marginLeft="@dimen/x30"
        android:src="@mipmap/img_good"
        android:scaleType="fitXY"
        />

</RelativeLayout>
