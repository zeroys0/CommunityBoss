<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y355"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/y30">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/x39"
    android:textColor="@color/hs_grey"
    android:text="asidjaoetij241"
    android:layout_marginTop="@dimen/y40"
    android:layout_marginLeft="@dimen/x30"
    android:id="@+id/order_no"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/hs_grey"
        android:layout_marginTop="@dimen/y36"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x30"
        android:text="订单配送"
        android:id="@+id/tv_state"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预约时间:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/order_no"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_t"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="06-18 20:30"
        android:textSize="@dimen/x39"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/order_no"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_apoint_time"
        android:layout_toRightOf="@id/tv_t"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="服务项目:"
        android:textSize="@dimen/x39"
        android:textColor="@color/text_black"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_t"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_s"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="擦抽烟机"
        android:textSize="@dimen/x39"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_t"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_service"
        android:layout_toRightOf="@id/tv_t"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="价格:"
    android:textSize="@dimen/x39"
    android:textColor="@color/text_black"
    android:layout_marginLeft="@dimen/x30"
    android:layout_below="@+id/tv_s"
    android:layout_marginTop="@dimen/y20"
    android:id="@+id/tv_p"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="300元/次"
        android:textSize="@dimen/x39"
        android:textColor="@color/hs_grey"
        android:layout_marginLeft="@dimen/x30"
        android:layout_below="@+id/tv_s"
        android:layout_marginTop="@dimen/y20"
        android:id="@+id/tv_price"
        android:layout_toRightOf="@id/tv_t"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/arrow_r"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x35"
        android:layout_marginTop="@dimen/y120"
        />
    <Button
        android:layout_width="@dimen/x383"
        android:layout_height="@dimen/y120"
        android:text="确认订单"
        android:textSize="@dimen/x54"
        android:textColor="@color/white"
        android:id="@+id/btn_confirm"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x38"
        android:layout_marginBottom="@dimen/y44"
        android:background="@drawable/btn_hs_confirm"
        />
</RelativeLayout>
