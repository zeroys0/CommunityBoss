                    android:layout_width="@dimen/x900"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x42"
                    android:id="@+id/ed_remark"
                    android:visibility="gone"
                    android:background="@null"
                    android:textColor="@color/text_grey"
                    android:layout_gravity="center_vertical"
                    android:maxLines="1"
                    android:layout_marginLeft="@dimen/x30"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/x42"
                    android:textColor="@color/text_grey"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:id="@+id/tv_remark"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y54"
                android:includeFontPadding="false"
                android:layout_marginLeft="@dimen/x30"
                android:text="吉野家(鼓楼店)"
                android:textColor="@color/black"
                android:id="@+id/tv_store_name"
                android:textSize="@dimen/x48"
                />
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y48"
                android:id="@+id/goods_list">

            </android.support.v7.widget.RecyclerView>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/x30">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小计"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/x39"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥25"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x54"
                    android:id="@+id/tv_total_price"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:textSize="@dimen/x34"
                android:layout_marginLeft="@dimen/x20"
                android:id="@+id/tv_refundRecord"
                android:visibility="gone"
                android:text="退款原因:"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_button"
                android:orientation="horizontal"
                android:visibility="gone">
                <Button
                    android:layout_width="@dimen/x480"
                    android:layout_height="@dimen/y129"
                    android:background="@drawable/btn_cancel"
                    android:text="拒绝退款"
                    android:layout_marginLeft="@dimen/x30"
                    android:textColor="#2194fe"
                    android:id="@+id/order_cancel"
                    />
                <Button
                    android:layout_width="@dimen/x480"
                    android:layout_height="@dimen/y129"
                    android:background="@drawable/btn_confirm"
                    android:text="确认退款"
                    android:id="@+id/order_confirm"
                    android:layout_marginLeft="@dimen/x30"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <Button
                android:layout_width="@dimen/x1014"
                android:layout_height="@dimen/y129"
                android:background="@drawable/cancel"
                android:text="null"
                android:id="@+id/btn_confirm"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/y57"
                android:layout_marginTop="@dimen/y40"
                android:visibility="gone"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x30"
                android:layout_marginRight="@dimen/x30"
                android:id="@+id/ll_comment"
                android:background="@color/white"
                android:layout_marginBottom="@dimen/y75"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/x48"
                    android:textColor="#333333"
                    android:text="用户评价"
                    android:includeFontPadding="false"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginTop="@dimen/y42"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="综合"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x42"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x200"
                        />

                    <net.leelink.communityboss.utils.RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmptyRes="@mipmap/star"
                        android:id="@+id/rt_attitude"
                        app:starSelectedRes="@mipmap/star_full"
                        app:starDistance="@dimen/x50"
                        app:selectedNumber="5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x428"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="包装"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x42"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x200"
                        />

                    <net.leelink.communityboss.utils.RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmptyRes="@mipmap/star"
                        app:starSelectedRes="@mipmap/star_full"
                        android:id="@+id/rt_taste"
                        app:starDistance="@dimen/x50"
                        app:selectedNumber="5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x428"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y90">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="味道"
                        android:textColor="@color/black"
                        android:textSize="@dimen/x42"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x200"
                        />

                    <net.leelink.communityboss.utils.RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starEmptyRes="@mipmap/star"
                        app:starSelectedRes="@mipmap/star_full"
                        android:id="@+id/rt_hygiene"
                        app:starDistance="@dimen/x50"
                        app:selectedNumber="5"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/x428"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/y10">
                    <ImageView
                        android:layout_width="@dimen/x62"
                        android:layout_height="@dimen/y62"
                        android:id="@+id/img_head"
                        android:src="@mipmap/comment_head"
                        android:layout_marginLeft="@dimen/x36"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x36"
                        android:id="@+id/tv_userphone"
                        android:textColor="@color/black"
                        android:includeFontPadding="false"
                        android:text="155xxxx3787"
                        android:layout_marginLeft="@dimen/x150"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/y54"
                        android:layout_marginLeft="@dimen/x152"
                        >
                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/star0"
                            />
                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/star0"
                            android:layout_marginLeft="@dimen/x8"/>
                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/star1"
                            android:layout_marginLeft="@dimen/x8"/>
                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/star1"
                            android:layout_marginLeft="@dimen/x8"/>
                        <ImageView
                            android:layout_width="@dimen/x20"
                            android:layout_height="@dimen/y20"
                            android:src="@mipmap/star1"
                            android:layout_marginLeft="@dimen/x8"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/x35"
                        android:textColor="#333333"
                        android:id="@+id/tv_comment"
                        android:text="非常好吃,好吃到爆,包装很好,配送十分快,下次也会关顾的"
                        android:layout_marginLeft="@dimen/x147"
                        android:layout_marginTop="@dimen/x96"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_comment"
