<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/login_logo"
        android:layout_marginTop="@dimen/y328"
        android:id="@+id/img_logo"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162"
        android:layout_marginLeft="@dimen/x120"
        android:layout_marginRight="@dimen/x120"
        android:layout_marginTop="@dimen/y100">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:inputType="phone"
            android:id="@+id/ed_phone"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:hint="请输入手机号"
            android:textColor="@color/text_black"
            android:textColorHint="#a9a9a9"
            android:layout_marginRight="@dimen/x160"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_down_black"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/x30"
            android:id="@+id/img_user_name"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x120"
        android:layout_marginRight="@dimen/x120"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162"
        android:layout_marginLeft="@dimen/x120"
        android:layout_marginRight="@dimen/x120">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:id="@+id/ed_code"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:hint="请输入验证码"
            android:textColor="@color/text_black"
            android:textColorHint="#a9a9a9"
            android:visibility="gone"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:id="@+id/ed_password"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:inputType="textPassword"
            android:hint="请输入密码"
            android:textColor="@color/text_black"
            android:textColorHint="#a9a9a9"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y99"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x45"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:id="@+id/getmsmpass_TX"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_eye"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/img_eye_close"
            android:padding="@dimen/x30"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x120"
        android:layout_marginRight="@dimen/x120"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x120"
        android:layout_marginRight="@dimen/x120"
        android:layout_marginTop="@dimen/y50">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码登录"
            android:id="@+id/tv_tab"
            android:textColor="#3fb2ff"
            android:textSize="@dimen/x40"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码?"
            android:textColor="#333333"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"
            android:id="@+id/tv_forgot"
            android:textSize="@dimen/x40"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还没有? 去注册"
        android:id="@+id/tv_register"
        android:textColor="#3fb2ff"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y170"
        />
    <!--    <View-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="@dimen/y2"-->
    <!--        android:background="@color/grey"-->
    <!--        android:layout_marginLeft="@dimen/x120"-->
    <!--        android:layout_marginRight="@dimen/x120"/>-->


    <Button
        android:layout_width="match_parent"
        android:layout_height="@dimen/y129"
        android:layout_marginLeft="@dimen/x124"
        android:layout_marginRight="@dimen/x124"
        android:background="@drawable/btn_enter"
        android:text="登录"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50"
        android:id="@+id/btn_login"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:text="商户编码"
        android:textColor="@color/blue"
        android:id="@+id/tv_code"
        android:layout_marginTop="@dimen/y40"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/y90">
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cb_agree"
            android:theme="@style/My_CheckBox"
            android:checked="false"
            />

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:layout_toRightOf="@+id/cb_agree"
            android:layout_centerVertical="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="@dimen/x36" />
    </RelativeLayout>
</LinearLayout>