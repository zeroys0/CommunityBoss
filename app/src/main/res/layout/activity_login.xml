<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.LoginActivity">
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y194"
        android:background="#008ccf">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/y44"
            android:layout_marginTop="@dimen/y80"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="@dimen/x58" />
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="@dimen/x200"
            android:layout_height="@dimen/y185">
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginBottom="@dimen/y35"
            android:text="注册"
            android:id="@+id/tv_register"
            />
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y156"
        android:id="@+id/tablayout"
        app:tabIndicatorColor="#1a9cff"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextAppearance="@android:style/TextAppearance.Holo.Small"
        app:tabTextColor="@color/black">

    </android.support.design.widget.TabLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="11"
            android:inputType="phone"
            android:id="@+id/ed_phone"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:hint="请输入手机号"
            android:textColorHint="#a9a9a9"
            android:layout_marginLeft="@dimen/x32"
            android:textColor="@color/text_black"
            />
        <TextView
            android:layout_width="@dimen/x291"
            android:layout_height="@dimen/y99"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/x45"
            android:background="@color/grey"
            android:text="获取验证码"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x32"
            android:id="@+id/getmsmpass_TX"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y162">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:id="@+id/ed_code"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:hint="请输入验证码"
            android:textColorHint="#a9a9a9"
            android:inputType="number"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/x32"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="16"
            android:id="@+id/ed_password"
            android:background="@null"
            android:layout_centerVertical="true"
            android:textSize="@dimen/x45"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColorHint="#a9a9a9"
            android:textColor="@color/text_black"
            android:layout_marginLeft="@dimen/x32"
            android:visibility="gone"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/y2"
        android:background="@color/grey"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginRight="@dimen/x32"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="@dimen/x45"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/y38"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/x56"
        android:includeFontPadding="false"
        android:id="@+id/tv_forgot"
        android:visibility="invisible"
        />
    <Button
        android:layout_width="@dimen/x1014"
        android:layout_height="@dimen/y129"
        android:background="@drawable/btn_confirm"
        android:text="登录"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y50"
        android:id="@+id/btn_login"
        />
</LinearLayout>